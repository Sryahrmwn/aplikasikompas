{
  "expo": {
    "name": "Sensor App",
    "slug": "sensor-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sensorapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sensorapp.mobile",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to display GPS coordinates, altitude, and speed.",
        "NSMotionUsageDescription": "This app uses motion sensors to display accelerometer and gyroscope data."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#EFF6FF",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.sensorapp.mobile",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#EFF6FF",
          "dark": {
            "backgroundColor": "#1F2937"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Sensor App to use your location."
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Allow Sensor App to access device motion sensors."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
